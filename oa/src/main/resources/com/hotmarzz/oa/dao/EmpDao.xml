<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hotmarzz.oa.dao.EmpDao">
	<!-- 原版的字段 -->
	<sql id="empCol">
		empid,empname,username,userpwd,phone,hiredate,schoolid,deptid,roleid,
		stationid,assowechat,createuser,createdate,updateuser,updatedate,sex
	</sql>
	<!-- 添加了role权限的字段 -->
	<sql id="empCol_role">
		empid,empname,username,userpwd,phone,hiredate,e.roleid er,
		assowechat,createuser,createdate,updateuser,updatedate,sex,r.roleid rr,r.rolename
	</sql>
	
